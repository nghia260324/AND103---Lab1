<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a60000"
    tools:context=".RegisterActivity">

    <TextView
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/baseline_person_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="82dp"
        android:text="ĐĂNG KÝ"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/main_register"
        android:layout_marginTop="200dp"
        android:paddingVertical="36dp"
        android:paddingHorizontal="24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="top|center"
        android:background="@drawable/customer_bgr_login"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chào mừng bạn,"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#a60000"
            android:layout_gravity="left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký tài khoản."
            android:textSize="18dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:textColor="#df767f"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            android:layout_gravity="center_vertical"
            app:hintTextColor="#a60000"
            android:paddingTop="7dp"
            android:paddingBottom="16dp"
            android:background="@drawable/customer_inputlogin">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/i_username"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nhập email"
                android:paddingTop="3dp"
                android:paddingHorizontal="12dp"
                android:background="#f5f5f5"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            android:layout_gravity="center_vertical"
            app:hintTextColor="#a60000"
            android:paddingTop="7dp"
            android:paddingBottom="16dp"
            android:background="@drawable/customer_inputlogin">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/i_password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nhập password"
                android:paddingTop="3dp"
                android:paddingHorizontal="12dp"
                android:background="#f5f5f5"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            android:layout_gravity="center_vertical"
            app:hintTextColor="#a60000"
            android:paddingTop="7dp"
            android:paddingBottom="16dp"
            android:background="@drawable/customer_inputlogin">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/i_remember_password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nhập lại password"
                android:paddingTop="3dp"
                android:paddingHorizontal="12dp"
                android:background="#f5f5f5"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btn_rLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐĂNG KÝ"
            android:textStyle="bold"
            android:layout_marginTop="36dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/cusomer_btn_login_red"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:text="Bạn đã có tài khoản?"/>
            <Button
                android:id="@+id/btn_rBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="#df767f"
                android:textStyle="bold"
                android:textSize="12dp"
                android:background="#00000000"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/google"/>
            <ImageButton
                android:layout_marginHorizontal="24dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/facebook"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/more"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>